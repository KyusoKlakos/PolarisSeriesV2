{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<h2>Polaris Series Admin</h2>
<form id="form-login" action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-element form-stack">
        <label for="username" class="form-label">Identifiant</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
    </div>

    <div class="form-element form-stack">
        <label for="password">Mot de passe</label>
        <input type="password" id="password" name="_password" required="required" autocomplete="current-password" />
    </div>

    <div class="form-element">
         <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
         <label for="remember_me">Se souvenir de moi</label>
    </div>

    <div class="form-element form-submit">
        <button id="_submit" class="login" type="submit" name="login">Se connecter</button>
    </div>
</form>
