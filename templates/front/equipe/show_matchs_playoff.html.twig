        .cardtie {
            margin-bottom: 3px;
        }

        #next-week {
            display: none;
        }

        .nextweek {
            position: absolute;
            right: 10px;
            top: 35%;
            height: 30%;
            margin: auto;
            border: solid #c5c5c5 1px;
            border-radius: 15px;
            display: inline-flex;
            vertical-align: middle;
            align-items: center;
            background-color: #FA9C1E;
        }

        .nextweek:hover {
            cursor: pointer;
        }

        .nextweek i {
            font-size: 3em;
            color: white !important;
            vertical-align: middle !important;
        }

        .currentweek {
            position: absolute;
            left: 10px;
