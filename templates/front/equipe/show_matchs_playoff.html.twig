<script>
     $(document).ready(function() {
         $("#content-next-map").hide();
         $("#content-next-map-small").hide();

          $("#next-map").click(function(){
                $("#content-map").fadeOut();
                setTimeout(function(){
                    $("#content-next-map").fadeIn();
                },300); 
          });

          $("#next-map-small").click(function(){
                $("#content-map-small").fadeOut();
                setTimeout(function(){
                    $("#content-next-map-small").fadeIn();
                },300); 
          });

          $("#first-map").click(function(){
                $("#content-next-map").fadeOut();
                setTimeout(function(){
                    $("#content-map").fadeIn();
                },300); 
          });

          $("#first-map-small").click(function(){
                $("#content-next-map-small").fadeOut();
